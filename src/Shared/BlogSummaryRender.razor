<article>
    <div class="post-heading">
        <a href="@Entry.Permalink" rel="bookmark"><h2 class="post-title">@((MarkupString)(System.Net.WebUtility.HtmlDecode(Entry.Title)))</h2></a>
        <p class="post-meta">
            <span class="posted-on">
                <i class="fa fa-calendar" aria-hidden="true"></i>
                <time class="entry-date published" datetime="@Entry.Created"><a href="@Entry.Created.ToString("/yyyy")" rel="bookmark">@Entry.Created.ToString("yyyy")</a>-<a href="@Entry.Created.ToString("/yyyy/MM")" rel="bookmark">@Entry.Created.ToString("MM")</a>-@Entry.Created.ToString("dd")</time>
            </span>
            <span class="author vcard"><i class="fa fa-user" aria-hidden="true"></i> @Entry.Author</span>
        </p>
    </div>
    <div class="entry-content">
        @if (Entry.Content.Length > 0)
        {
            var postSummarised = false;

            foreach (var item in Entry.Content)
            {
                if (item == "<!--more-->")
                {
                    postSummarised = true;
                    break;
                }

                @((MarkupString)(System.Net.WebUtility.HtmlDecode(item)))
            }

            if (postSummarised)
            {
                <a href="@Entry.Permalink">Read More</a>
            }
        }
    </div>
    <Categories CategoryArray="@Entry.Categories" />
    <hr>
</article>